<Window x:Class="wpf_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_project"
        mc:Ignorable="d"
        Title="Cooker Shop" Height="300" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Height="100" Margin="0,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="100" Source="Resources\pngegg.png"/>
        <Button Content="Авторизация" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Roboto" FontWeight="Bold" FontSize="25" Padding="10,5,10,5"/>
        <Button Content="Регистрация" Margin="0,0,0,0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Roboto" FontWeight="Bold" FontSize="25" Padding="10,5,10,5"/>
    </Grid>
    
</Window>
